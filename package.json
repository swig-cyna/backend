{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
    "db:seed": "cross-env DB_SEEDING=true tsx src/db/seed.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.16.4",
    "@scalar/hono-api-reference": "^0.5.159",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "bcrypt": "^5.1.1",
    "better-status-codes": "^2.0.5",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.7",
    "drizzle-orm": "^0.35.3",
    "drizzle-zod": "^0.5.1",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.12.0",
    "hono": "^4.6.10",
    "pg": "^8.13.1",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.3",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.17.6",
    "@types/pg": "^8.11.10",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.26.2",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "prettier": "^3.4.0",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}
